

def calcular_costo_cita(numero_cita):
    if numero_cita <= 3:
        return 200000
    elif numero_cita <= 5:
        return 150000
    elif numero_cita <= 8:
        return 100000
    else:
        return 50000

def calcular_total_anterior(numero_cita):
    total = 0
    for cita in range(1, numero_cita):
        total += calcular_costo_cita(cita)
    return total

def validar_numero_cita(numero):
    try:
        numero = int(numero)
        if numero < 1:
            print("error: el número de cita debe ser mayor a 0")
            return False
        return True
    except ValueError:
        print("error:  ingresa  un número válido")
        return False

def formatear_precio(valor):
     return "${:,}".format(valor)


print("\n___ CALCULO DEL COSTO DE CONSULTAS MEDICAS ___")
print(" __ consultorio dr. Lorenzo T. mata lozano __")
print("---------------" * 2)

#entrada número de cita
while True:
    numero_cita = input("\nIngrese el número de cita actual: ")
    if validar_numero_cita(numero_cita):
        numero_cita = int(numero_cita)
        break

#cálculos
costo_actual = calcular_costo_cita(numero_cita)
total_anterior = calcular_total_anterior(numero_cita)
total_con_actual = total_anterior + costo_actual

#resultados
print("\nResultados:")
print(f"costo cita actual: {formatear_precio(costo_actual)}")
print(f"total pagado citas anteriores: {formatear_precio(total_anterior)}")
print(f"total acumulado cita actual: {formatear_precio(total_con_actual)}")

